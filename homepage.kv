#:kivy 2.2.0
BoxLayout:
    orientation:'vertical'


    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.4
		elevation:10

        canvas.before:
            RoundedRectangle:
                pos: self.pos
                size: self.size
                source: "Assets\LightBluePurple_Gradient.png"
				radius: [0,0,250,250]

		Widget: 
	        adaptive_height: True
            size_hint_y:0.3

        Label:
            text: 'Next Session In:'
			font_name:"Assets\HomepageBaukasten-Book.ttf"
            font_size: sp(20)* root.width / dp(360)
            color: 1, 1, 1, 1
            size_hint_y: None
            height: self.texture_size[1]
			valign:'center'

        Label:
            text: '00 : 00 : 00 : 00'
			font_name:"Assets\HomepageBaukasten-Book.ttf"
            font_size: sp(30) * root.width / dp(360)
            color: 1, 1, 1, 1
            size_hint_y: None
            height: self.texture_size[1]

		Widget:
	        adaptive_height: True
            size_hint_y:0.3


