#:kivy 2.0.0
ScreenManager:
    id: screen_manager
    HomeScreen:

<HomeScreen>:
    name:'HomeScreen'
    BoxLayout:
        orientation:'vertical'

        MDBottomNavigation:
            id:bottom_nav
            text_color_normal: "lightgrey"
            panel_color: 0,0,0,0
            selected_color_background: 0,0,0,0
            text_color_active: 250/255, 132/255, 139/255,1
    
            MDBottomNavigationItem:
                id:home_tab
                name:'Home'
                text:'Home'
                icon:'home'
                on_tab_press: app.root.current_screen.enter_tab(self)
                on_leave: app.root.current_screen.leave_tab(self)

                FloatLayout:
                    size_hint: 1,1
                    spacing : dp(5)

                    MDCard:
                        size_hint: 2, 1.05
                        radius: [dp(500), dp(500), dp(500), dp(500)]
                        pos_hint: {'center_x': 0.5, 'center_y': 1.05}
                        elevation: 0
                        md_bg_color: 244/255,157/255,162/255,0.3

                    MDCard:
                        size_hint: 2, 1
                        radius: [dp(500), dp(500), dp(500), dp(500)]
                        pos_hint: {'center_x': 0.5, 'center_y':1.05}
                        elevation: 0
                        md_bg_color: 244/255,157/255,162/255,0.7

                    MDCard:
                        size_hint: 2, 0.95
                        radius: [dp(500), dp(500), dp(500), dp(500)]
                        pos_hint: {'center_x': 0.5, 'center_y': 1.05}
                        elevation: 0
                        md_bg_color: 244/255,157/255,162/255,1

                    
                    BoxLayout:
                        orientation:'horizontal'
                        size_hint: 1,0.225
                        padding:dp(10)
                        spacing:dp(5)
                        pos_hint:{'center_x':0.5,'top':1}
                        

                        MDLabel:
                            text:'Welcome,'
                            font_size: sp(16) * root.width / dp(360)
                            theme_text_color: "Custom"
                            text_color: "white"


                        MDIconButton:
                            icon:'bell'
                            pos_hint:{'center_x':1,'top':1}
                            theme_text_color: "Custom"
                            text_color: "white"

                        MDIconButton:
                            icon:'dots-vertical'
                            pos_hint:{'center_x':1,'top':1}
                            theme_text_color: "Custom"
                            text_color: "white"
                    
                    BoxLayout:
                        orientation:'horizontal'
                        size_hint: 1,0.25
                        padding:dp(30)
                        spacing:dp(5)
                        pos_hint:{'center_x':0.5,'top':0.95}

                        MDLabel:
                            text:'UserName'
                            font_name:"Assets/Montserrat-Regular.ttf"
                            font_size: sp(50) * root.width / dp(360)
                            theme_text_color: "Custom"
                            text_color: "brown"


                    BoxLayout:
                        orientation:'vertical'
                        size_hint:0.9, 0.65
                        padding: dp(10)
                        spacing: dp(15)
                        pos_hint:{'center_x':0.5,'top':0.7}

                        MDCard:
                            md_bg_color:1,1,1,1
                            elevation:0.4
                            padding:dp(10)

                            GridLayout:
                                rows:2
                                padding:dp(10)

                                MDLabel:
                                    text: "Today's Session"
                                    font_name:"Assets\\Montserrat-Regular.ttf"
                                    font_size:sp(20) * root.width / dp(360)
                                    theme_text_color:'Custom'
                                    text_color: 'brown'

                                MDLabel:
                                    text:"Click to start taday's session"
                                    font_size:sp(12) * root.width / dp(360)
                                    theme_text_color:'Custom'
                                    text_color:'lightgrey'
                                    size_hint_y:None
                                    height: self.texture_size[1]

                            FitImage:
                                id: bg_image
                                source: "Assets\\exercise_card.png"
                                size_hint: None,None
                                height : self.parent.height * 0.6
                                width : self.height
                                pos_hint: {"top": 0.7,'center_x':1}
                                keep_ratio: True
                                #radius: [36, 36, 0, 0, ]
                            MDIcon:
                                icon:'chevron-right'
                                pos_hint:{'top':1,'center_x':1}
                                font_size:40
                                theme_text_color:"Custom"
                                text_color: 'brown'


                        MDCard:
                            md_bg_color:1,1,1,1
                            elevation:0.4
                            padding:dp(10)

                            GridLayout:
                                rows:2
                                padding:dp(10)

                                MDLabel:
                                    text: "Records"
                                    font_name:"Assets\\Montserrat-Regular.ttf"
                                    font_size:sp(20) * root.width / dp(360)
                                    theme_text_color:'Custom'
                                    text_color: 'brown'

                                MDLabel:
                                    text:"Click to view record of sessions you have done"
                                    font_size:sp(12) * root.width / dp(360)
                                    theme_text_color:'Custom'
                                    text_color:'lightgrey'
                                    size_hint_y:None
                                    height: self.texture_size[1]

                            FitImage:
                                id: bg_image
                                source: "Assets\\logs_card.png"
                                size_hint: None,None
                                height : self.parent.height * 0.6
                                width : self.height
                                pos_hint: {"top": 0.7,'center_x':1}
                                keep_ratio: True
                                #radius: [36, 36, 0, 0, ]
                            MDIcon:
                                icon:'chevron-right'
                                pos_hint:{'top':1,'center_x':1}
                                font_size:40
                                theme_text_color:"Custom"
                                text_color: 'brown'


                        MDCard:
                            md_bg_color:1,1,1,1
                            elevation:0.4 
                            padding:dp(10)

                            GridLayout:
                                rows:2
                                padding:dp(10)

                                MDLabel:
                                    text: "Progress"
                                    font_name:"Assets\\Montserrat-Regular.ttf"
                                    font_size:sp(20) * root.width / dp(360)
                                    theme_text_color:'Custom'
                                    text_color: 'brown'

                                MDLabel:
                                    text:"Click to view your progress with Physiotherapy"
                                    font_size:sp(12) * root.width / dp(360)
                                    theme_text_color:'Custom'
                                    text_color:'lightgrey'
                                    size_hint_y:None
                                    height: self.texture_size[1]

                            FitImage:
                                id: bg_image
                                source: "Assets\\progress_card.png"
                                size_hint: None,None
                                height : self.parent.height * 0.6
                                width : self.height
                                pos_hint: {"top": 0.7,'center_x':1}
                                keep_ratio: True
                                #radius: [36, 36, 0, 0, ]
                            MDIcon:
                                icon:'chevron-right'
                                pos_hint:{'top':1,'center_x':1}
                                font_size:40
                                theme_text_color:"Custom"
                                text_color: 'brown'

            #------------------------------------------------------------------------------------------------------

            MDBottomNavigationItem:
                id: consult_tab
                name:'Consult'
                text:'Consult'
                icon:'message-outline'
                on_tab_press: app.root.current_screen.enter_tab(self)
                on_leave: app.root.current_screen.leave_tab(self)

                BoxLayout:
                    orientation:'vertical'
                    MDBoxLayout:
                        orientation:'horizontal'
                        size_hint: 1,0.1
                        padding:dp(20)
                        spacing:dp(20)
                        md_bg_color:244/255,157/255,162/255,1

                        MDIcon:
                            icon:"account-circle"
                            size_hint: None,None
                            size: 60,60
                            font_size: 40
                            pos_hint:{'center_x':0.7,'center_y':0.5}
                            theme_text_color: "Custom"
                            text_color: "white"

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height
                            pos_hint:{'center_y':0.5}
                            MDLabel:
                                text:'Mr.Jackson'
                                font_name:"Assets/Montserrat-Regular.ttf"
                                theme_text_color: "Custom"
                                text_color: "white"
                                size_hint_y:None
                                height: 40

                        MDIconButton:
                            icon:'information-outline'
                            pos_hint:{'center_y':0.5}
                            theme_text_color: "Custom"
                            text_color: "white"

                    MDCard:
                        md_bg_color:1,0,0,0
                        radius:0,0,0,0

                    BoxLayout:
                        orientation:'horizontal'
                        padding:dp(10)
                        size_hint_y: None
                        height: self.minimum_height
                        MDCard:
                            md_bg_color: .9, .9, .9, .9
                            elevation: 0
                            height: 50
                            size_hint_y: None
                            radius: [25, ]
                            padding: [5, 5, 5, 5]

                            MDIconButton:
                                icon: "emoticon-happy-outline"
                                size_hint_x: None
                                user_font_size: 16
                                size_hint: (None, None)
                                pos_hint: {'center_y':.5}
                                theme_text_color: 'Custom'
                                size: 30, 30
                                padding: 0
                            TextInput:
                                id: textinput
                                font_size: 13
                                cursor_color: .5, .5, .5, 1
                                line_color_normal: 0, 0, 0, 0
                                line_color_focus: 0, 0, 0, 0
                                color_mode: "custom"
                                current_hint_text_color: .5, .5, .5, 1
                                height: 30
                                background_color: 0, 0, 0, 0
                                hint_text: "Type a message"
                                padding: [10, ]
                            MDIconButton:
                                icon: "paperclip"
                                theme_text_color: 'Custom'
                                size_hint_x: None
                                user_font_size: 16
                                size_hint: (None, None)
                                pos_hint: {'center_y':.5}
                                size: 30, 30
                                padding: 0
                            MDIconButton:
                                icon: "microphone"
                                theme_text_color: 'Custom'
                                size_hint_x: None
                                user_font_size: 16
                                size_hint: (None, None)
                                pos_hint: {'center_y':.5}
                                size: 30, 30
                                padding: 0

                        MDCard:
                            elevation: 0
                            height: 50
                            size_hint: 0.1, None
                            radius: [15, ]

                            MDIconButton:
                                icon:"send"
                                theme_text_color: 'Custom'
                                text_color: "black"
                                user_font_size: 16
                                size_hint: (None, None)
                                pos_hint: {'center_y':.5}
                                size: 30, 30
                                padding: 0

            #-------------------------------------------------------------------------------------------------------

            MDBottomNavigationItem:
                id: community_tab
                name:'Community'
                text:'Community'
                icon:'account-group-outline'
                on_tab_press: app.root.current_screen.enter_tab(self)
                on_leave: app.root.current_screen.leave_tab(self)

            #-------------------------------------------------------------------------------------------------------

            MDBottomNavigationItem:
                id: profile_tab
                name:'Account'
                text:'Account'
                icon:'account-cog-outline'
                on_tab_press: app.root.current_screen.enter_tab(self)
                on_leave: app.root.current_screen.leave_tab(self)